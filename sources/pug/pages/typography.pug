extends  ../_skeleton


include ../components/_ui-header-classic
include ../components/_ui-footer-classic

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Typography'

block page 
  // Page Header
  +rd-navbar-header-classic({
    logoDark: brand.default,
    logoLight: brand.defaultInverse
  })

  +breadcrumbs({
    category: activeCategory,
    path: [pageName]
  })

  // Base typography
  section.section.section-lg
    .container
      .row.row-50.flex-lg-row-reverse
        .col-lg-3.col-xl-4
          .row.row-35.row-lg-50
            .col-sm-6.col-lg-12
              article.box-bordered
                h5 Google Fonts
                h2.fw-bold Muli
                h4 Open Sans

            .col-sm-6.col-lg-12
              article.box-bordered
                h5 Used colors
                ul.list-palette
                  +loop(5)
                    li

        .col-lg-9.col-xl-8
          ul.list-xl
            li
              h1 H1 Heading
              p Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page.

