  hr

  section.section.section-md
    .container
      .table-outer.table-rounded.table-responsive-lg
        table.table-custom.table-custom-striped.table-custom-secondary
          thead
            tr
              th Column 1
              th Column 2
              th Column 3
              th Column 4

          tbody
            tr
              td Item #1
              td Description
              td Subtotal
              td $3.00
            tr
              td Item #2
              td Description
              td Discount
              td $3.00
            tr
              td Item #3
