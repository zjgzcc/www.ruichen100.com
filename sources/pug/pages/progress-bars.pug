extends  ../_skeleton

//- Includes
include ../components/_ui-header-classic
include ../components/_ui-footer-classic
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Progress Bars'

block page  
  // Page Header
  +rd-navbar-header-classic({
    logoDark: brand.default,
    logoLight: brand.defaultInverse
  })

  +breadcrumbs({
    category: activeCategory,
    path: [pageName]
  })

  // Skill Bars
  section.section.section-md
    .container
      .text-center
        h2 Progress Bars, Skill Bars, Counters
        p: span(style='max-width: 690px;') These elements are vital to design of every website, and with them you can improve the overall look of your resource and attract more clients.

      .row.row-20.row-lg-50.row-lg-x-50.justify-content-center.offset-top-2
        .col-md-6.col-lg-5
          +progress-bar-linear({
            title: 'Sales',
            valueTo: '75'
          })

          +progress-bar-linear({
            title: 'Analysis',
            valueTo: '80'
          }).progress-linear-secondary

        .col-md-6.col-lg-5
          +progress-bar-linear({
            title: 'Finance',
            valueTo: '85'
          })

          +progress-bar-linear({
            title: 'Marketing',
            valueTo: '80'
          }).progress-linear-secondary

  // Counters
  section.section.section-md.bg-gray-100.text-center
    .container
      .layout-bordered-1
        .layout-bordered-1-item
          // Counter Classic
          article.counter-classic
            .counter-classic-main
              .counter 360
              span.small.text-accent +
            h4.counter-classic-title Tasks Managed #[br] Every Day

        .layout-bordered-1-item
          // Counter Classic
          article.counter-classic
            .counter-classic-main
              .counter 152
              span.small.text-accent K
            h4.counter-classic-title Global #[br] Downloads

        .layout-bordered-1-item
          // Counter Classic
          article.counter-classic
            .counter-classic-main
              .counter 950
              span.small.text-accent +
            h4.counter-classic-title Positive #[br] Reviews


  // Circle Progress Bars
  section.section.section-md.text-center
    .container
      h3 Circle Progress Bars

      .row.justify-content-center.row-50
        .col-sm-10.col-md-8.col-lg-12
          .row.justify-content-center.row-50
            .col-sm-6.col-lg-3
              // Circle Progress Bar
              .progress-circle
                .progress-circle-block
                  svg.progress-circle-bar( x='0', y='0', width='190', height='190', viewbox='0 0 190 190' )
                    circle.progress-circle-bg( cx=95, cy=95, r=90 )
                    circle.progress-circle-fg.clipped( cx=95, cy=95, r=90 )
                  .progress-circle-counter 73
                p.progress-bar-circle-title Leadership

            .col-sm-6.col-lg-3
              // Circle Progress Bar
              .progress-circle
                .progress-circle-block
                  svg.progress-circle-bar( x='0', y='0', width='190', height='190', viewbox='0 0 190 190' )
                    circle.progress-circle-bg( cx=95, cy=95, r=90 )
                    circle.progress-circle-fg.clipped( cx=95, cy=95, r=90 )
                  .progress-circle-counter 11
              p.progress-bar-circle-title Management

            .col-sm-6.col-lg-3
              // Circle Progress Bar
              .progress-circle
                .progress-circle-block
                  svg.progress-circle-bar( x='0', y='0', width='190', height='190', viewbox='0 0 190 190' )
                    circle.progress-circle-bg( cx=95, cy=95, r=90 )
                    circle.progress-circle-fg.clipped( cx=95, cy=95, r=90 )
                  .progress-circle-counter 13
              p.progress-bar-circle-title Innovation and creativity

            .col-sm-6.col-lg-3
              // Circle Progress Bar
              .progress-circle
                .progress-circle-block
                  svg.progress-circle-bar( x='0', y='0', width='190', height='190', viewbox='0 0 190 190' )
                    circle.progress-circle-bg( cx=95, cy=95, r=90 )
                    circle.progress-circle-fg.clipped( cx=95, cy=95, r=90 )
                  .progress-circle-counter 59
              p.progress-bar-circle-title Resilience


  // Countdown
  section.section.section-md.bg-gray-100.text-center
    .container
      .row.justify-content-center
        .col-md-10.col-xl-9
          h3 Countdown
          // Countdown
          .countdown.countdown-modern(
          data-type='until'
          data-time='31 May 2022 16:00'
          data-format='dhms')

  // Page Footer
  +footer-classic({
    logo: brand.default,
    text: 'Since 1999, we have been helping American businesses thrive.'
  })
